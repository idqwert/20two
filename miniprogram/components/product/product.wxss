.fl{
  float: left;
}
.fr{
  float: right;
}
.clearfix::after{
  content: "";
  display: block;
  clear: both;
}
.auto-img{
  width: 200rpx;
  height: 200rpx !important;
}
.product{
  padding: 20rpx 20rpx;
}

.pro-img{
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
}



.pro-info{
  width: calc(100% - 220rpx);
  margin-left: 20rpx;
}

.pro-name{
  font-size: 40rpx;
  color: #444;
  margin-bottom: 20rpx;
}

.month-count{
  color: #999;
  font-size: 30rpx;
}

.score{
  color: #e4393c;
  font-size: 24rpx;
}

.price-box{
  margin-top: 40rpx;
}

.pro-price{
  color: #c16d78;
  font-weight: bold;
  font-size: 40rpx;
  line-height: 60rpx;
}

.pro-rule{
  width: 130rpx;
  height: 60rpx;
  background-color: #c16d78;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
}